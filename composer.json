{
    "name": "vakata/authentication",
    "description": "PHP authentication library",
    "keywords": [
        "vakata",
        "authentication"
    ],
    "homepage": "https://github.com/vakata/authentication",
    "license": "MIT",
    "authors": [{
        "name": "vakata",
        "email": "github@vakata.com",
        "homepage": "http://www.vakata.com",
        "role": "Developer"
    }],
    "require": {
        "vakata/random": ">=1.1.1",
        "vakata/database": "^3.0.2"
    },
    "require-dev": {
        "phpunit/phpunit": "4.*",
        "codeclimate/php-test-reporter": "dev-master",
        "clean/phpdoc-md": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "vakata\\authentication\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "vakata\\authentication\\test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "psr2": "php-cs-fixer fix ./src",
        "phpdoc": "phpdoc-md"
    }
}